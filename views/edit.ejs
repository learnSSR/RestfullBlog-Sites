  <% include partials/header %>

<div class="ui main text container segment">
	<div  class="ui huge header ">Edit <%= blogs.title%></div>
      <form class="ui form" action="/blogs/<%= blogs._id %>?_method=PUT" method="POST">
         <div class="field">
         	<label>Title</label>
         	<input type="text" name="blogs[title]" value="<%= blogs.title %>" placeholder="title">
         </div>

          <div class="field">
         	<label>Image</label>
         	 <input type="text" name="blogs[image]" placeholder="image" value="<%= blogs.image %>">
         </div>
          
          <div class="field">
         	<label>Blog Content</label>
         	<textarea name="blogs[body]"> <%= blogs.body%></textarea>
         </div>
          
      	  <input type="submit" class="ui inverted purple big button">
      </form>
</div>

<% include partials/footer %>